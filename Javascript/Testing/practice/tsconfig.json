{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "rootDir": "app",
        "allowJs": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "outDir": "./dist/",
        "lib": [
            "es2017",
            "es6",
            "es5",
            "dom",
            "dom.iterable"
        ]
    },
    "exclude": [
      "./dist",
    ]
}